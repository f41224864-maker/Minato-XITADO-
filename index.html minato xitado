<script>
function entrar(){
  document.getElementById("login").classList.remove("active");
  document.getElementById("painel").classList.add("active");
}

/* animação ON/OFF */
document.querySelectorAll(".toggle").forEach(t=>{
  t.onclick = ()=>{
    t.classList.toggle("on");
  }
});
</script>

